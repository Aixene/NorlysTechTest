@model IEnumerable<Office>

@{
    ViewData["Title"] = "All Offices";
}

<h2>All Offices</h2>
<a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Location</th>
            <th>Maximum Occupants</th>
            <th>Current Occupants</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.Location</td>
                <td>@o.MaxOccupancy</td>
                <td>@o.Occupancy</td>
            </tr>
        }
    </tbody>
</table>