@model Employee
@{
    ViewBag.Title = "Update a Employee";
}

<h2>Update an Employee <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input class="form-control" asp-for="BirthDate" />
    </div>
    <div class="form-group">
        <label asp-for="MainOfficeId"></label>
        <select class="form-control form-select-sm form-select" asp-for="MainOfficeId" asp-items="@ViewBag.offices"></select>
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Employee</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birthday</th>
                <th>Main Office ID</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td>@Model.BirthDate</td>
                <td>@Model.MainOfficeId</td>
            </tr>
        </tbody>
    </table>
}

@if (ViewBag.Result == "Failure")
{
    <h2>Invalid Employee Update</h2>
    
}